                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="0d0c8d8a4a2cbdedfd8f6e7c1a0feac8bfb92a39" />
    </application>

</manifest>