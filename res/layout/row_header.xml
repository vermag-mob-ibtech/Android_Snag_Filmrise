<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="@dimen/drawer_section_height"
    android:background="@drawable/actionbar_selectable_background">
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_icon_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/movies_icon"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/drawer_padding_top" 
        android:paddingBottom="@dimen/drawer_padding_top" 
        android:layout_marginLeft="@dimen/drawer_padding_left"
        android:layout_marginRight="@dimen/drawer_padding_right"
        />

  <TextView
      android:id="@+id/label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/icon"
      android:layout_toLeftOf="@+id/unread_message_count"
      android:textColor="@color/navigation_text_color"
      android:textSize="@dimen/menu_text_size"
      android:fontFamily="sans-serif-light"/>

  <ProgressBar
      android:id="@+id/progressBarDynamicNavigation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true" />
  
  <TextView 
      android:id="@+id/unread_message_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:textColor="@color/navigation_text_color"
      android:textSize="@dimen/menu_text_size"
      android:layout_marginRight="@dimen/marginright"
      android:fontFamily="sans-serif-light" />
  
    </RelativeLayout>