<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="fill_parent"
        android:background="@color/settings_selected_text"
        android:layout_height="@dimen/header_height" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
  />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_body_height"
        android:background="@color/white"
        android:layout_below="@+id/layout_header" >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/message_margin_left"
            android:textColor="@color/light_low_grey"
            android:layout_marginRight="@dimen/message_margin_right"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_body"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_body" >

        <Button
            android:id="@+id/button"
            android:textColor="@color/grey"
            android:layout_width="fill_parent"
        	android:background="@color/progress_bar_tracker"
            android:layout_height="@dimen/dialog_button_height" />
    </RelativeLayout>

</RelativeLayout>