<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:background="@color/bar_navigation" >

                <TextView
                    android:id="@+id/tv_playback"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/set_h"
                    android:layout_marginLeft="@dimen/margin_setting"
                    android:layout_marginRight="@dimen/margin_setting"
                    android:clickable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/playback"
                    android:textColor="@color/body_text_primary"
                    android:textSize="@dimen/text_settings_header" />
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_caption"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="@string/captions"
                android:textColor="@color/body_text_primary"
                android:textSize="@dimen/text_settings_sub"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/rl_for_caption"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_caption_height"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <LinearLayout
                    android:id="@+id/linearLayout_play"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_auto_play"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_play"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_play_next_movie"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/play_next_movie"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_settings_sub" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/check_closed_captioning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/marginright"
                    android:button="@drawable/checkbox_border" />
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/rl_for_notification"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <RelativeLayout
                    android:id="@+id/rl_push_check"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_accept_push"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/accept_push"
                        android:textColor="@color/body_text_primary"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/check_accept_push"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/marginright"
                        android:layout_centerVertical="true"
                        android:button="@drawable/checkbox_border" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:background="@color/bar_navigation" >

                <TextView
                    android:id="@+id/tv_my_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_setting"
                    android:layout_marginRight="@dimen/margin_setting"
                    android:fontFamily="sans-serif"
                    android:text="@string/myaccount"
                    android:textColor="@color/body_text_primary"
                    android:textSize="@dimen/text_settings_header" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_for_subricption_info"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <RelativeLayout
                    android:id="@+id/rl_subricption"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_subricption_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/subricption_info"
                        android:textColor="@color/body_text_primary"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal_last"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/rl_for_personal_info"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <RelativeLayout
                    android:id="@+id/rl_personal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_personal_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/personal_info"
                        android:textColor="@color/body_text_primary"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal_last"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/rl_for_privacy_policy"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/policy"
                        android:textColor="@color/body_text_primary"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal_last"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/rl_for_terms_use"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/set_h"
                android:layout_marginLeft="@dimen/margin_setting"
                android:layout_marginRight="@dimen/margin_setting"
                android:background="@drawable/categories_phone_selector"
                android:clickable="true" >

                <RelativeLayout
                    android:id="@+id/rl_terms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_terms_use"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/terms_of_use"
                        android:textColor="@color/body_text_primary"
                        android:textSize="@dimen/text_settings_sub"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_horizontal_last"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/view_settings_height_sub"
                android:background="@color/black" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>