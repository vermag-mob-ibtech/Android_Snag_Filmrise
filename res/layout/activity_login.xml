<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/bar_navigation" >

        <TextView
            android:id="@+id/tv_promoheadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_headline_margin_top"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="@dimen/welcome_header_text_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_promoheadline"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/login_text_margin_left"
            android:layout_marginRight="@dimen/login_text_margin_right"
            android:layout_marginTop="@dimen/login_text_margin_top"
            android:fontFamily="sans-serif-light"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/welcome_header_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_snagfilmlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/snagfilm_logo_left"
            android:src="@drawable/snagfilms_logo" />

        <Button
            android:id="@+id/btn_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_browse_right"
            android:background="@drawable/actionbar_selectable_background"
            android:drawablePadding="@dimen/browsebuttonpadding"
            android:drawableRight="@drawable/skip_icon"
            android:fontFamily="sans-serif"
            android:paddingLeft="@dimen/browsebuttonpadding"
            android:paddingRight="@dimen/browsebuttonpadding"
            android:text="@string/browse"
            android:textColor="@color/settings_selected_text"
            android:textSize="@dimen/skip_textsize" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_browse_right"
            android:background="@drawable/btn_cross"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentcontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>