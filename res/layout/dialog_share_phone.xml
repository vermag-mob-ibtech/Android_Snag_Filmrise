<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_title_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/share_title_background" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/share_height"
            android:layout_marginLeft="@dimen/share_title_left_margin"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/share"
            android:textColor="@color/body_text_secondary"
            android:textSize="@dimen/textsize_title_share" />
    </LinearLayout>

    <GridView
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/share_gridview"
        android:numColumns="3"
        android:stretchMode="columnWidth" >
    </GridView>

</LinearLayout>