<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="poster_grid_layout">
        <item name="android:listSelector">@drawable/item_selector_snagfilms</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="SnagStylePhone" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_selectable_background</item>
        <item name="android:itemBackground">@drawable/actionbar_selectable_background</item>
    </style>
    
    <style name="SnagStyleTablet" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_selectable_background_tablet</item>
        <item name="android:itemBackground">@drawable/actionbar_selectable_background_tablet</item>
    </style>

    <style name="custommediabutton" parent="@android:style/MediaButton.Play">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/media_but_width</item>
        <item name="android:layout_height">@dimen/media_but_width</item>
    </style>

    <style name="customseekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">@dimen/custom_seekbar_minheight</item>
        <item name="android:maxHeight">@dimen/custom_seekbar_minwidth</item>
        <item name="android:thumb">@drawable/volume_indicator_icon_outer</item>
        <item name="android:thumbOffset">@dimen/thumb_offset</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.DeviceDefault.Dialog"></style>
	<!--Chromecast  Dialog -->
    <style name="CastDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CastDialogWindowTitle</item>
    </style>

    <style name="CastDialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--ShowCase -->
    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail.Light</item>
        <item name="sv_backgroundColor">#3333B5E5</item>
        <item name="sv_buttonText">@string/ok</item>
    </style>

    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="sv_backgroundColor">#96000000</item>
        <item name="sv_buttonText">@string/ok</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#33B5E5</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:shadowRadius">0</item>
    </style>
    
</resources>