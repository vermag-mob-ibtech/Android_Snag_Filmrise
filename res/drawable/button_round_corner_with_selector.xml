<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- pressed -->
<shape android:padding="@dimen/btn_round_corner_padding" android:shape="rectangle">
            <solid android:color="@color/pressedcolor" />

            <corners android:bottomLeftRadius="@dimen/btn_round_corner_radius" android:bottomRightRadius="@dimen/btn_round_corner_radius" android:topLeftRadius="@dimen/btn_round_corner_radius" android:topRightRadius="@dimen/btn_round_corner_radius" />
        </shape></item>
    <item android:state_focused="true">
        <!-- focused -->
<shape android:padding="@dimen/btn_round_corner_padding" android:shape="rectangle">
            <solid android:color="@color/red" />

            <corners android:bottomLeftRadius="@dimen/btn_round_corner_radius" android:bottomRightRadius="@dimen/btn_round_corner_radius" android:topLeftRadius="@dimen/btn_round_corner_radius" android:topRightRadius="@dimen/btn_round_corner_radius" />
        </shape></item>
    <item android:state_pressed="false">
        <!-- default -->
<shape android:padding="@dimen/btn_round_corner_padding" android:shape="rectangle">
            <solid android:color="@color/btn_detail" />

            <corners android:bottomLeftRadius="@dimen/btn_round_corner_radius" android:bottomRightRadius="@dimen/btn_round_corner_radius" android:topLeftRadius="@dimen/btn_round_corner_radius" android:topRightRadius="@dimen/btn_round_corner_radius" />
        </shape></item>
    <item android:state_focused="false">
        <!-- default -->
<shape android:padding="@dimen/btn_round_corner_padding" android:shape="rectangle">
            <solid android:color="@color/btn_detail" />

            <corners android:bottomLeftRadius="@dimen/btn_round_corner_radius" android:bottomRightRadius="@dimen/btn_round_corner_radius" android:topLeftRadius="@dimen/btn_round_corner_radius" android:topRightRadius="@dimen/btn_round_corner_radius" />
        </shape></item>

</selector>